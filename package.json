{
  "name": "mico",
  "version": "1.0.0",
  "description": "AI-managed Kanban board â€” local-first, privacy-friendly",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "concurrently -n server,frontend -c blue,green \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:server": "tsx src/server.ts",
    "dev:frontend": "npm run dev --prefix frontend",
    "build": "tsc -p tsconfig.build.json",
    "build:frontend": "npm install --prefix frontend && npm run build --prefix frontend",
    "start": "node dist/server.js",
    "test": "vitest run",
    "db:generate:dev": "prisma generate --schema=prisma/schema.sqlite.prisma",
    "db:generate:prod": "prisma generate --schema=prisma/pg/schema.prisma",
    "db:migrate:dev": "prisma migrate dev --schema=prisma/schema.sqlite.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=prisma/pg/schema.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "helmet": "^8.0.0",
    "nanoid": "^5.1.6",
    "resend": "^6.9.2",
    "ws": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.3.0",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.1.2",
    "prisma": "^6.9.0",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
